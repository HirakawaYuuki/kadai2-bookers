<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3">
				<h2>Editing Book</h2>
				<%= form_for(@book) do |f| %>
				<div class="form-group-has-icon">
					<label for="book_title">Title</label>
					<%= f.text_field :book_title, class: "form-control col-lg-6 book_title"  %>
				</div>
				<div class="field row">
					<label for="book_opinion">Opinion</label>
					<%= f.text_area :caption, class: "form-control col-lg-6 book_body" %>
				</div>
				<div class="actions row">
					<%= f.submit "Update Book", class: "btn btn-primary col-lg-12" %>
				</div>
				<% end %>
				<%= link_to "Show", book_path(@book.id),class: "book_#{@book.id}" %>
				|
				<%= link_to "Back", books_path, class: "back" %>
			</div>
		</div>
	</div>
</div>