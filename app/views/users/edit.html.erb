<div class="body">
  <div class="container">
    <% if @user.errors.any? %>
           <h3 style="color:red;"><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
           <% @user.errors.full_messages.each do |message| %><br>
                 <div style="color:red;"><%= message %></div>
            <% end %>
        <% end %>
    <h2>User info</h2>
    <%= form_for(@user) do |f| %>
      <div class="form-group has-icon">
      <%= f.label :Name %>
      <%= f.text_field :name,class: "name", autofocus: true %>
      <span class="fa fa-userform-control-icon" aria-hidden="true"></span>
      </div>
    <div class="user-edit-image">
     <%= f.label :Image %>
     <%= f.attachment_field :profile_image,class: "user_image", placeholder: "プロフィール画像" %>
   </div>
    <label for="user_introduction">Introduction</label>
     <%= f.text_area :introduction_id,class: "introduction" %>
    <div class="actions">
    <%= f.submit "Update User" %>
   </div>
   <% end %>
  </div>
</div>
